<div class="row">
    @foreach (var post in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">

                <div class="card-body">
                    <h5 class="card-title">@post.Id</h5>
                    <h4 class="card-title">@post.Title</h4>
                    <h6> @post.PublicationDate </h6>
                </div>

                <form asp-controller="Post" asp-action="Delete" asp-route-id="@post.Id" method="post" style="margin-bottom: 10px">
                    <button type="submit" style="background:#e53935;color:#fff;border:none;padding:8px 16px;border-radius:4px;cursor:pointer;font-size:14px;"> Delete </button>
                </form>
                
                <a href="@Url.Action("Edit", "Post", new { id = post.Id, name = post.Title, description = post.Content })" aria-label="anchor" class="btn btn-sm bg-primary-subtle me-1"
                   data-bs-toggle="tooltip" data-bs-original-title="Edit" style="margin-top: 10px">
                    <i class="mdi mdi-pencil-outline fs-14 text-primary"> Edit </i>
                </a>
                
                <a asp-controller="Post"
                   asp-action="Details"
                   asp-route-id="@post.Id"
                   class="btn btn-sm btn-info"
                   style="margin-top:10px">
                    View Details
                </a>
                
            </div>
        </div>
    }
</div>