<div class="row">
    @foreach (var post in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100" style="border-top-color: black">

                <div class="card-body">
                    <h5 class="card-title">@post.Id</h5>
                    <h4 class="card-title">@post.Title</h4>
                    <h6> @post.PublicationDate </h6>
                </div>

                <form asp-controller="Post" asp-action="Delete" asp-route-id="@post.Id" method="post" class="btn btn-sm btn-info" style="background-color: red">
                    <button type="submit" style="border: none; width: 100%; color: white; font-weight: bold; outline: none; background-color: transparent"> Delete </button>
                </form>
                
                <a href="@Url.Action("Edit", "Post", new { id = post.Id, name = post.Title, description = post.Content })" aria-label="anchor" class="btn btn-sm btn-info"
                   data-bs-toggle="tooltip" data-bs-original-title="Edit">
                    <i class="mdi mdi-pencil-outline fs-14 text-primary"> Edit </i>
                </a>
                
                <a href="@Url.Action("Details", "Post", new { id = post.Id })"
                   class="btn btn-sm btn-info"
                   style="background-color: black; color: white;">
                    View Details
                </a>
                
            </div>
        </div>
    }
</div>